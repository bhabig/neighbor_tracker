<h1>Add A Child:</h1>
<form action="/children" method="post">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Name" required></p>
  </div>
  <div class="form-group">
    <label for="name">Age:</label>
    <input type="text" class="form-control" id="age" name="age" placeholder="Age" required></p>
  </div>
  
  <label>Who are this child's parents?</label>
  <div class="form-group">
    <select class="form-control" name="house_id">
      <% @houses.each do |house| %>
        <option value="<%= house.id %>"><%= house.address %></option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn btn-default btn-lg">Add Parent</button>
</form>
